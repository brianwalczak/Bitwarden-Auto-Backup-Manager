{
    "name": "bitwarden-auto-backup-manager",
    "productName": "Bitwarden Auto-Backup Manager",
    "description": "A robust application that creates local, encrypted auto-backups for your Bitwarden vault.",
    "author": "Brian Walczak",
    "version": "2.1.3",
    "main": "index.js",
    "scripts": {
        "pack": "electron-builder --dir",
        "dist": "electron-builder"
    },
    "build": {
        "appId": "com.brianwalczak.bitwarden-auto-backup-manager",
        "win": {
            "target": "nsis"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": false,
            "perMachine": false
        },
        "extraResources": [
            {
                "from": "build/icon.ico",
                "to": "icon.ico"
            }
        ]
    },
    "dependencies": {
        "@bitwarden/sdk-internal": "0.2.0-main.527",
        "electron-log": "^5.4.3",
        "jquery": "^3.7.1",
        "keytar": "^7.9.0",
        "path": "^0.12.7",
        "rxjs": "^7.8.1",
        "tldts": "^6.1.34"
    },
    "devDependencies": {
        "electron": "^31.1.0",
        "electron-builder": "^24.4.0",
        "prettier": "^3.8.1"
    }
}
